{
  "ConnectionStrings": {
    "DataConnectionString": "Data Source=(localdb)\\MSSQLLocalDB;Initial Catalog=WeatherDB"
  },
  // СТАНДАРТНОЕ ЛОГГИРОВАНИЕ УДАЛЯЕМ
  //"Logging": {
  //  "LogLevel": {
  //    "Default": "Information",
  //    "Microsoft": "Warning",
  //    "Microsoft.Hosting.Lifetime": "Information"
  //  }
  //},

  // СОЗДАЁМ ЛОГГИРОВАНИЕ SERILOG
  "Serilog": {
    // - Подключаем сторонние библиотеки
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.RollingFile"
    ],
    // - Фильтры вывода информации в log
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning", // -- пространство имён, из которого идёт логирование
        "Microsoft.Hosting.Lifetime": "Information" // -- пространство имён, из которого идёт логирование
      }
    },
    // - Куда писать
    "WriteTo": [
      {
        "Name": "Console", // -- консольный writer
        "outputTemplate": "[{Timestamp:HH;mm:ss.fff zzz} {SourceContext} [{Level}]{NewLine}{Message}{NewLine}{Exception}]", // -- шаблон вывода
        "theme": "Serilog.Sinks.SystemConsole.Themes.SystemConsoleTheme::Grayscale, Serilog.Sinks.Console" // -- цветовая схема вывода
      },
      {
        "Name": "RollingFile", // -- файл, который ограничен по размеру и будет переписываться
        "Args": {
          "fileSizeLimitBytes": 104857600, // -- при преввышении этого размера
          "logDirectory": ".\\Logs",
          "pathFormat": "Logs/WeatherAcquisition.API[{Date}].log",
          "outputTemplate": "{Timestamp:o} [{Level:u3}] ({Application}/{MachineName}/{ThreadId}) (SourceContext} {Message}{NewLine}{Exception}",
          "rollingInterval": "Day" // -- или каждый день будет переписываться
        }
      },
      {
        "Name": "File", // -- файл типа json
        "Args": {
          "formatter": "Serilog.Formatting.Json.JsonFormatter, Serilog",
          "logDirectory": ".\\Logs",
          "pathFormat": "Logs/WeatherAcquisition.API[{Date}].json",
          "rollingInterval": "Day"
        }
      }
    ],
    // - Дополнительные источники информации, откуда добавлять данные в каждый элемент записи журнала
    "Enrich": [
      "FromLogContext",   // -- из контекста
      "WithMachineName",  // -- из названия машины
      "WithProcessId",    // -- номер процесса
      "WithThreadId"      // -- номер потока
    ],
    // - Дополнительные параметры (используются в записях "Куда писать")
    "Properties": {
      "Application": "WeatherAcquisition.API"   // -- название приложения
    }
  },

  "AllowedHosts": "*"
}
